@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron text-center">
    <h2>Library Zone</h2>
    <hr />
    <p class="lead">This is the Web Application created for library use in ASP.NET with MsSQL as database provider.</p>
</div>
<hr />
 <br />
<div class="row">
    @*Carousel from bootstrap*@
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/p1.png" alt="Author Page" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Author Page</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/p2.png" alt="Publisher Page" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Publisher Page</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/p3.png" alt="Book Page" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Book Page</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/p4.png" alt="Library Rules" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Library Rules</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/p5.png" alt="Users Page" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Users Page</h3>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>